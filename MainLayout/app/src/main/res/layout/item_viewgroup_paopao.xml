<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="-20dp"
        android:layout_toRightOf="@+id/img_head"
        android:background="@drawable/pop"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_get_task_nick"
            style="@style/green_12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:text="ID:小小小"/>

        <TextView
            android:id="@+id/tv_get_task_type"
            style="@style/pop_grey_10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="接到一个直通车任务"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="5dp"/>

    </LinearLayout>

    <com.xiaoxiao.mainlayout.view.CircleImageView
        android:id="@+id/img_head"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:src="@drawable/pop_taobao"/>

</RelativeLayout>